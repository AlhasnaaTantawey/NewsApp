<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="20dp"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.products.editProducts.EditProductsActivity">



        <TextView
            android:id="@+id/list_item_productname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name :  "
            android:layout_marginTop="40dp"
            android:textSize="18sp"
            android:textColor="#0000FF"
            android:fontFamily="sans-serif"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/list_item_name"
            android:layout_width="294dp"
            android:layout_height="40dp"
            android:text="name"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/list_item_productname"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/list_item_productquentity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="quentity:"
            android:fontFamily="sans-serif"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/list_item_productname"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="18sp"
            android:textColor="#0000FF"
            />

        <EditText
            android:id="@+id/list_item_quentity"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:text="quentity"
            android:gravity="left|center"
            android:textSize="18sp"
            android:background="@drawable/shape"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/list_item_productquentity"
            app:layout_constraintTop_toBottomOf="@id/list_item_name"
            />

        <TextView
            android:id="@+id/list_item_productprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price :    "
            android:fontFamily="sans-serif"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/list_item_productquentity"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="18sp"
            android:textColor="#0000FF"
            />

        <EditText
            android:id="@+id/list_item_price"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:background="@drawable/shape"
            android:text="price"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/list_item_productprice"
            app:layout_constraintTop_toBottomOf="@id/list_item_quentity"
            />

        <TextView
            android:id="@+id/list_item_productTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="total price:"
            android:fontFamily="sans-serif"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/list_item_productprice"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="18sp"
            android:textColor="#0000FF"
            />

        <EditText
            android:id="@+id/list_item_totalPrice"
            android:layout_width="281dp"
            android:layout_height="39dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:fontFamily="sans-serif"
            android:gravity="left|center"
            android:text=" total price"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@id/list_item_productTotalPrice"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_item_price" />

        <Button
            android:id="@+id/list_item_button_delet"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="#3f3bf5"
            android:text="save"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_item_productTotalPrice"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>