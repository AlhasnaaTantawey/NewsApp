<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="12dp"
        app:cardElevation="40dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/list_item_productname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name :  "
                android:textSize="18sp"
                android:textColor="#0000FF"
                android:fontFamily="sans-serif"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textSize="16sp"
                android:inputType="text"
                android:fontFamily="sans-serif"
                app:layout_constraintLeft_toRightOf="@id/list_item_productname"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/list_item_productquentity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="quentity : "
                android:fontFamily="sans-serif"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/list_item_productname"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="18sp"
                android:textColor="#0000FF"
                />

            <TextView
                android:id="@+id/list_item_quentity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="quentity"
                android:textSize="16sp"
                android:inputType="number"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                app:layout_constraintLeft_toRightOf="@id/list_item_productquentity"
                app:layout_constraintTop_toBottomOf="@id/list_item_name"
                />

            <TextView
                android:id="@+id/list_item_productprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price : "
                android:fontFamily="sans-serif"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/list_item_productquentity"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="18sp"
                android:textColor="#0000FF"
                />

            <TextView
                android:id="@+id/list_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price"
                android:textSize="16sp"
                android:inputType="number"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                app:layout_constraintLeft_toRightOf="@id/list_item_productprice"
                app:layout_constraintTop_toBottomOf="@id/list_item_quentity"
                />

            <TextView
                android:id="@+id/list_item_productTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="total price : "
                android:fontFamily="sans-serif"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/list_item_productprice"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="18sp"
                android:textColor="#0000FF"
                />

            <TextView
                android:id="@+id/list_item_totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" total price"
                android:textSize="16sp"
                android:inputType="number"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                app:layout_constraintLeft_toRightOf="@id/list_item_productTotalPrice"
                app:layout_constraintTop_toBottomOf="@id/list_item_price"
                />


            <Button
                android:id="@+id/list_item_button_delet"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#3f3bf5"
                android:text="delete "
                android:textAllCaps="false"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/list_item_productTotalPrice"
                />

            <Button
                android:id="@+id/list_item_button_edit"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#3f3bf5"
                android:text="edit"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:layout_marginRight="20dp"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/list_item_productTotalPrice"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


