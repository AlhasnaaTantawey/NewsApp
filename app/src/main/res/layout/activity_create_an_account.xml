<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Users.signup.CreateAnAccountActivity">

    <TextView
        android:id="@+id/CreateAnAccountActivity_txtview_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an Account "
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/CreateAnAccountActivity_edittext_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape"
        android:hint="user name"
        android:inputType="text"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/CreateAnAccountActivity_txtview_create"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/CreateAnAccountActivity_edittext_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:hint="email  "
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/CreateAnAccountActivity_edittext_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/CreateAnAccountActivity_edittext_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:drawableRight="@drawable/ic_baseline_visibility_off_24"
        android:hint="password "
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/CreateAnAccountActivity_edittext_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/CreateAnAccountActivity_edittext_phone"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:hint="phone"
        android:inputType="phone"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/CreateAnAccountActivity_edittext_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/CreateAnAccountActivity_errormessage"
        android:text="you should fill all these fields !!"
        android:textColor="#FF0000"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/CreateAnAccountActivity_edittext_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/activity_main_button_create_an_account"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#3f3bf5"
        android:text="create an account "
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/CreateAnAccountActivity_edittext_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
       />

</androidx.constraintlayout.widget.ConstraintLayout>